<% if logged_in? %>
  <h1><%= current_user.name %> のタスク一覧</h1>
 
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク内容</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <% user = task.user %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @tasks %>

<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>  
  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to タスク管理！</h1>
      <%= link_to '今すぐユーザ登録!!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>  